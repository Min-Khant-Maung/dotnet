@model BatchViewModel;
<head>
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <title>Batch Entry</title>
</head>
<form action="/batch/Edit" method="post">
    <input type="text" value="@Model.Id" name="Id" hidden />
    <div class="mb-3">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" value="@Model.Name" name="Name" required>
    </div>
    <div class="mb-3">
        <label class="form-label">Description</label>
        <input type="text" class="form-control" value="@Model.Description" name="Description">
    </div>
    <div class="mb-3">
        <label class="form-label">Course</label>
        <select name="CourseId" class="form-control">
            <option value="@Model.CourseId">@Model.CourseName</option>
            @foreach (var item in ViewBag.CourseList)
            {
                <option value="@item.Value">@item.Text</option>
            }
        </select>
    </div>

    <div class="mb-3">
        <div class="row">
            <div class="col">
                <input type="submit" class="btn btn-success" value="Entry" />
            </div>
            <div class="col">
                <input type="reset" class="btn btn-secondary" value="Cancel" />
            </div>
        </div>
    </div>
</form>


