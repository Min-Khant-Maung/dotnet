@model AttendanceViewModel;
<head>
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <title>Attendance Entry</title>
</head>
<form action="/attendance/Edit" method="post">
    <input type="text" value="@Model.Id" name="Id" hidden />
    <div class="mb-3">
        <label class="form-label">AttendanceDate</label>
        <input type="text" class="form-control" value="@Model.AttendanceDate.ToString("yyyy-MM-dd")" name="AttendanceDate" required>
    </div>
    <div class="mb-3">
        <label class="form-label">InTime</label>
        <input type="text" class="form-control" value="@Model.Intime" name="InTime" required>
    </div>
    <div class="mb-3">
        <label class="form-label">OutTime</label>
        <input type="text" class="form-control" name="OutTime" value="@Model.OutTime" required>
    </div>
    <div class="mb-3">
        <label class="form-label">IsLeave</label>
        <input type="radio" class="form-control" name="IsLeave" value="Leave" checked=@Model.IsLeave>
    </div>
    <div class="mb-3">
        <label class="form-label">IsLate</label>
        <input type="radio" class="form-control" name="IsLate" value="Late" checked=@Model.IsLate>
    </div>
    <div class="mb-3">
        <label class="form-label">Student</label>
        <select name="StudentId" class="form-control">
            <option value="@Model.StudentId">@Model.StudentName</option>
            @foreach (var item in ViewBag.StudentList)
            {
                <option value="@item.Value">@item.Text</option>
            }
        </select>
    </div>
    <div class="mb-3">
        @if (Model.IsLate.Equals("True"))
        {
            <label class="form-label">IsLate</label>
            <input type="radio" class="form-control" name="IsLate" value="Late" id="rdoIsLate" checked />
        }
        else
        {
            <label class="form-label">IsLate</label>
            <input type="radio" class="form-control" name="IsLate" value="Late" id="rdoIsLate" />
        }
        @if (Model.IsLeave.Equals("True"))
        {
            <label class="form-label">IsLeave</label>
            <input type="radio" class="form-control" name="IsLeave" value="Leave" id="rdoIsLeave" checked>
        }
        else
        {
            <label class="form-label">IsLeave</label>
            <input type="radio" class="form-control" name="IsLeave" value="Leave" id="rdoIsLeave">
        }
    </div>

    <div class="mb-3">
        <div class="row">
            <div class="col">
                <input type="submit" class="btn btn-success" value="Entry" />
            </div>
            <div class="col">
                <input type="reset" class="btn btn-secondary" value="Cancel" />
            </div>
        </div>
    </div>
</form>
<script type="text/javascript">
    $(document).ready(function () {
        $('#rdoIsLate').click(function () {
            $("#rdoIsLeave").prop("checked", false);
        });
        $('#rdoIsLeave').click(function () {
            $("#rdoIsLate").prop("checked", false);
        });
    });
</script>
<script src="~/lib/jquery/jquery.js"></script>

