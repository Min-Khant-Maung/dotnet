@model IList<StudentViewModel>
<head>
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <title>Attendance Entry</title>
</head>
<h1>@ViewBag.msg</h1>
<form action="/attendance/Entry" method="post">
    <div class="mb-3">
        <label class="form-label">AttendanceDate</label>
        <input type="date" class="form-control" name="AttendanceDate" placeholder="AttendanceDate" required>
    </div>
    <div class="mb-3">
        <label class="form-label">Intime</label>
        <input type="time" class="form-control" name="Intime" placeholder="Intime" required>
    </div>
    <div class="mb-3">
        <label class="form-label">OutTime</label>
        <input type="time" class="form-control" name="OutTime" placeholder="OutTime" required>
    </div>
    <div class="mb-3">
        <label class="form-label">IsLeave</label>
        <input type="radio" class="form-control" name="IsLeave" value="Leave" id="rdoIsLeave" placeholder="IsLeave">
        <label class="form-label">IsLate</label>
        <input type="radio" class="form-control" name="IsLate" value="Late" id="rdoIsLate" placeholder="IsLate" >
    </div>
    <div class="mb-3">
        <label class="form-label">Student</label>
        <select name="StudentId" class="form-control">
            @foreach (var item in Model)
            {
                <option value="@item.Id">@item.Name</option>
            }
        </select>
    </div>
    <div class="mb-3">
        <div class="row">
            <div class="col">
                <input type="submit" class="btn btn-success" value="Entry" />
            </div>
            <div class="col">
                <input type="reset" class="btn btn-secondary" value="Cancel" />
            </div>
        </div>
    </div>
</form>
<script type="text/javascript">
    $(document).ready(function () {
        $('#rdoIsLate').click(function () {
            $("#rdoIsLeave").prop("checked", false);
        });
        $('#rdoIsLeave').click(function () {
            $("#rdoIsLate").prop("checked", false);
        });
    });
</script>
<script src="~/lib/jquery/jquery.js"></script>

